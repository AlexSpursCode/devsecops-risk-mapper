# Copy to .env and replace all placeholder values before running in shared environments.

POSTGRES_DB=devsecops
POSTGRES_USER=devsecops
POSTGRES_PASSWORD=change-me-db-password

NEO4J_AUTH=neo4j/change-me-neo4j-password
NEO4J_PASSWORD=change-me-neo4j-password

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-minio-password

DATABASE_URL=postgresql+psycopg://devsecops:change-me-db-password@postgres:5432/devsecops

AUTH_MODE=jwt
AUTH_ALLOW_INSECURE_HEADER=false
AUTH_JWT_SECRET=replace-with-strong-secret
AUTH_JWT_ALGORITHM=HS256
AUTH_JWT_ISSUER=devsecops
AUTH_JWT_AUDIENCE=devsecops-api
AUTH_JWT_LEEWAY_SECONDS=30

METRICS_PUBLIC=false

MAX_JOB_RETRIES=3
MAX_JOB_QUEUE_SIZE=1000
MAX_REPORTS_PER_JOB=50
MAX_REPORT_BYTES=1048576
JOB_RETENTION_SECONDS=3600
